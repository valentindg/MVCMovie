@model MVCMovie.Models.DetailsViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    @foreach (var item in Model.Movies)
    {
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].Actors)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Actors)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].ImdbNote)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.ImdbNote)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].MovieDuration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.MovieDuration)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Rating)
            </dd>
        </dl>
        @foreach (var items in Model.Comment)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment[0].Review)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment[0].ReviewDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => items.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => items.Review)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => items.ReviewDate)
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="col-md-4">

                <form asp-action="SendReview">
                    <div class="form-group">

                        Name: <input asp-for="@items.Name" class="form-control" />
                        <span asp-validation-for="@items.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Review: <input asp-for="@items.Review" class="form-control" />
                        <span asp-validation-for="@items.Review" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="SendReview" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        }
        <div>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
</div>
